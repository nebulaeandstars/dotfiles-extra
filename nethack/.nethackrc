

# *** PLAYER OPTIONS ***

OPTIONS=name:player,dogname:Lucy,catname:Sir Pounce,horsename:Epona,fruit:guava,boulder:0
OPTIONS = autopickup,pickup_types:$
OPTIONS = packorder:")[%!?=/+(*0_`

OPTIONS = time,number_pad:0,lit_corridor,hilite_pet

# *** MENUCOLORS ***

OPTIONS=color,menucolors

MENUCOLOR="water"=cyan

MENUCOLOR="blessed"=lightgreen
MENUCOLOR="holy "=lightcyan
MENUCOLOR="cursed"=orange
MENUCOLOR="unholy"=lightmagenta
MENUCOLOR="uncursed"=white

MENUCOLOR="being worn"=grey&underline
MENUCOLOR="cursed.*being worn"=orange&underline
MENUCOLOR="blessed.*being worn"=lightgreen&underline
MENUCOLOR="uncursed.*being worn"=white&underline

MENUCOLOR=".*in hand"=grey&underline
MENUCOLOR="cursed.*in hand"=orange&underline
MENUCOLOR="blessed.*in hand"=lightgreen&underline
MENUCOLOR="uncursed.*in hand"=white&underline

MENUCOLOR="bag"=brown

MENUCOLOR="cockatrice"=magenta
MENUCOLOR="chickatrice"=magenta
MENUCOLOR="vanish"=magenta
MENUCOLOR="cancellation"=magenta
MENUCOLOR="tricks"=red
